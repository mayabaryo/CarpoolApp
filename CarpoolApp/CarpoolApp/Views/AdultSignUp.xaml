<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarpoolApp.Views.AdultSignUp">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter Your Details"></Label>
            <Entry x:Name="Email" Text="{Binding Email}" Placeholder="Email"   
                           Keyboard="Email"/>
            <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Password" IsPassword="True"/>
            <Label Text="Enter Your Kid's Details"></Label>
            <Entry x:Name="KidEmail" Text="{Binding KidEmail}" Placeholder="Email"   
                           Keyboard="Email"/>
            <Entry x:Name="KidPassword" Text="{Binding KidPassword}" Placeholder="Password" IsPassword="True"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>