<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarpoolApp.Views.AdultPage"
             FlowDirection="RightToLeft">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="בית" Order="Primary" Priority="0" IconImageSource="home.png" Command="{Binding HomePageCommand}"></ToolbarItem>
        <ToolbarItem Text="הוספת ילד" Order="Secondary" Priority="0" Command="{Binding AddKidPageCommand}"></ToolbarItem>
        <ToolbarItem Text="הוספת פעילות" Order="Secondary" Priority="1" Command="{Binding AddActivityPageCommand}"></ToolbarItem>
        <ToolbarItem Text="הצטרפות לפעילות" Order="Secondary" Priority="2" Command="{Binding AddCarpoolPageCommand}"></ToolbarItem>
        <ToolbarItem Text="צפייה בפעילויות" Order="Secondary" Priority="3" Command="{Binding ActivitiesPageCommand}"></ToolbarItem>
        <ToolbarItem Text="צפייה בהסעות" Order="Secondary" Priority="4" Command="{Binding CarpoolsPageCommand}"></ToolbarItem>
        <ToolbarItem Text="התנתק" Order="Secondary" Priority="5" Command="{Binding LogOutCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Adult Page" Style="{StaticResource title}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>