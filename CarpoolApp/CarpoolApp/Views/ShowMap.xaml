                        ItemsLayout="HorizontalList">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>

                            <SwipeView>
                                
                                
                                <SwipeView.TopItems>
                                    <SwipeItems>

                                        <SwipeItem Text="הגיע"
                                                           IconImageSource="tickIcon.png"
