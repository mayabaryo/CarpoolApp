<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarpoolApp.Views.KidPage"
             FlowDirection="RightToLeft">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="בית" Order="Primary" Priority="0"></ToolbarItem>
        <ToolbarItem Text="צפייה בפעילויות" Order="Secondary" Priority="0"></ToolbarItem>
        <ToolbarItem Text="צפייה בהסעות" Order="Secondary" Priority="1"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Kid Page" Style="{StaticResource title}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>